                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    --><!-- 트리거 채널 선택 --><!--
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="25"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Trigger" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black"
                                   FontWeight="Bold"/>
                        <ComboBox Name="combo" Style="{StaticResource CustomComboBoxStyle}" BorderBrush="LightGray" BorderThickness="2"
                            ItemsSource="{Binding Path=CurrentSelectedAxisChannelList}" SelectedIndex="{Binding Path=CurrentSelectedTriggerIndex}"
                            Grid.Column="1" Margin="5" SelectionChanged="TriggerBox_OnSelectionChanged" FontWeight="Bold" Foreground="Black"/>
                        <Button Style="{StaticResource ImgButtonStyle}" Grid.Column="2" Click="TriggerSettingBtn_OnClick">
                            <Button.Content>
                                <Image Source="../../../../ICon/settingICO.ico" Width="20" Height="20"/>
                            </Button.Content>
                        </Button>
                    </Grid>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <Border BorderBrush="LightGray" BorderThickness="0 1 1 0" Grid.Column="0">
                            <CheckBox Style="{StaticResource InspectListCheckBoxStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10"
                                      Foreground="Black" FontWeight="Bold"/>
                        </Border>

                        <Border BorderBrush="LightGray" BorderThickness="0 1 1 0" Grid.Column="1">
                            <TextBlock Text="상태표시" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15"/>
                        </Border>
                    </Grid>
                </Grid>-->
            </Border>
        </Grid>

        <Grid Grid.Row="1" Grid.ColumnSpan="2" SizeChanged="Grid_SizeChanged">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <StackPanel Name="myStackPane" Orientation="Horizontal" HorizontalAlignment="Stretch" Grid.Row="0" Background="{Binding Path=ThemaColor}"/>

            <!--<Border BorderBrush="DimGray" BorderThickness="2" Grid.Row="1" Background="FloralWhite">-->
            <Grid Name="SettingAxisGrid" Grid.Row="1" Background="{Binding Path=ThemaColor}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border BorderBrush="DimGray" BorderThickness="2" Grid.Column="1" Background="{Binding Path=SettingColor}" Margin="5 0 5 0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <!--<Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="FitMode" Foreground="{Binding Path=ThemaForeColor}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" Grid.Column="0"/>
                                <ComboBox Name="FitModBox" Background="{Binding Path=ThemaComboColor}" BorderBrush="LightGray" BorderThickness="2" Foreground="Black"
                                    FontSize="12" ItemsSource="{Binding Path=FitModeList}" SelectedIndex="{Binding Path=FitModeIndex, UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center"
                                    Margin="5" Grid.Row="1" Grid.Column="1" IsEnabled="{Binding Path=IsComboBoxEnabled}"/>
                            </Grid>-->

                            <!--<Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="TimeUnit" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" Grid.Column="0"/>
                                <ComboBox Name="TimeUnitBox" Background="Transparent" BorderBrush="LightGray" BorderThickness="2" Foreground="Black"
                                    FontSize="12" ItemsSource="{Binding Path=TimeunitList}" SelectedIndex="{Binding Path=TimeunitIndex, UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center"
                                    Margin="5" Grid.Column="1"/>
                            </Grid>-->
                            
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="ZoomMode" Foreground="{Binding Path=ThemaForeColor}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" Grid.Column="0"/>
                                <ComboBox Name="ZoomModeBox" Background="{Binding Path=ThemaComboColor}" BorderBrush="LightGray" BorderThickness="1" Foreground="Black"
                                    FontSize="10" ItemsSource="{Binding Path=ZoomModeList}" SelectedIndex="{Binding Path=ZoomModeIndex, UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center"
                                    Margin="3" Grid.Column="1" IsEnabled="{Binding Path=IsComboBoxEnabled}"/>
                            </Grid>

                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Time Division" Foreground="{Binding Path=ThemaForeColor}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" Grid.Column="0"/>
                                <ComboBox Name="TimeScaleBox" Background="{Binding Path=ThemaComboColor}" BorderBrush="LightGray" BorderThickness="1" Foreground="Black" VerticalContentAlignment="Center"
                                    FontSize="10" ItemsSource="{Binding Path=ShowXAxisScaleList}" SelectedIndex="{Binding Path=XAxisScaleIndex, UpdateSourceTrigger=PropertyChanged}"
                                    Margin="3" Grid.Row="1" Grid.Column="1" IsEnabled="{Binding Path=IsComboBoxEnabled}"/>
                            </Grid>
                        </Grid>

                        <Grid Grid.Column="1" Grid.ColumnSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <!-- 커서 -->
                            <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <Border BorderBrush="LightGray" BorderThickness="0 0 0 1" Grid.Row="0" Grid.ColumnSpan="2">
                                        <TextBlock Text="Cursor" Foreground="{Binding Path=ThemaForeColor}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10"/>
                                    </Border>
                                    <Border BorderBrush="LightGray" BorderThickness="0 0 1 0" Grid.Row="1" Grid.Column="0">
                                        <CheckBox Name="Cursor1Check" Style="{StaticResource InspectListCheckBoxStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="8"
                                            IsChecked="{Binding Path=IsCheckedCursor1}" IsEnabled="{Binding Path=IsCheckBoxEnabled}" 
                                            Foreground="{Binding Path=ThemaForeColor}" BorderBrush="White"/>
                                    </Border>
                                    <Border BorderBrush="LightGray" BorderThickness="0 0 0 0" Grid.Row="1" Grid.Column="1">
                                        <CheckBox Name="Cursor2Check" Style="{StaticResource InspectListCheckBoxStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="8"
                                            IsChecked="{Binding Path=IsCheckedCursor2}" IsEnabled="{Binding Path=IsCheckBoxEnabled}"
                                            Foreground="{Binding Path=ThemaForeColor}"/>
                                    </Border>
                                </Grid>
                            </Border>

                            <!-- 스크린 샷 -->
                            <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <Border BorderBrush="LightGray" BorderThickness="0 0 0 1" Grid.Row="0" Grid.ColumnSpan="2">
                                        <TextBlock Text="Save &amp; Load" Foreground="{Binding Path=ThemaForeColor}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10"/>
                                    </Border>
                                    <Border BorderBrush="LightGray" BorderThickness="0 0 1 0" Grid.Row="1" Grid.Column="0">
                                        <Button Content="데이터 확인" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Test_OnClick"
                                                IsEnabled="{Binding Path=IsButtonEnabled}"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>

                        <ToggleButton Style="{StaticResource CustomToggleButtonStyle}" FontSize="10" Grid.Column="3" 
                                IsEnabled="{Binding Path=IsCommBtnEnabled}" IsChecked="{Binding Path=IsOscilloCommCheck}" 
                                Content="{Binding Path=OscilloscopeText}" Foreground="{Binding Path=ThemaForeColor}"/>
                    </Grid> 
                </Border>
            </Grid>
        </Grid>

        <!--<Border BorderBrush="LightGray" BorderThickness="3" Grid.Row="1" Grid.Column="0">
            <Canvas>
                <Line X1="100" X2="100" Y1="150" Y2="50" Stroke="Red" StrokeThickness="3" Visibility="{Binding Path=AxisVisible1}"/>
            </Canvas>
        </Border>

        <Border BorderBrush="LightGray" BorderThickness="0 3 3 3" Grid.Row="1" Grid.Column="1">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="그래프 공간"/>
        </Border>-->

