<UserControl x:Class="DCT_Graph.OscilloscopeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:popup="clr-namespace:CrevisLibrary" SizeChanged="OscControl_SizeChanged"
             xmlns:graph="clr-namespace:DCT_Graph" Loaded="OsciiloscopeControl_OnLoaded"
             Height="auto" Width="auto" x:Name="OscControl" Background="Transparent" PreviewMouseDown="OscControl_PreviewMouseDown">
    <UserControl.Resources>
        <Style x:Key="InspectListCheckBoxStyle" TargetType="{x:Type CheckBox}">
            <Style.Setters>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type CheckBox}">
                            <Border Name="border" Background="Transparent" CornerRadius="3">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1.5*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Image Name="img" Source="../../../ICon/Check.ico" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Grid.Row="0"/>
                                    <ContentPresenter Name="presenter" Content="DISABLED" HorizontalAlignment="Center"
                                      VerticalAlignment="Center" TextBlock.FontSize="{TemplateBinding FontSize}" Grid.Row="1"
                                      TextBlock.Foreground="{TemplateBinding Foreground}"/>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Effect" TargetName="border">
                                        <Setter.Value>
                                            <DropShadowEffect ShadowDepth="3" BlurRadius="5" Color="Gray" Opacity="0.5"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter Property="Source" Value="../../../ICon/Check.ico" TargetName="img"/>
                                    <Setter Property="Content" Value="ENABLED" TargetName="presenter"/>
                                </Trigger>
                                <Trigger Property="IsChecked" Value="False">
                                    <Setter Property="Source" Value="../../../ICon/UnCheck.ico" TargetName="img"/>
                                    <Setter Property="Content" Value="DISABLED" TargetName="presenter"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style.Setters>
        </Style>

        <Style x:Key="InspectListCheckBoxWhiteStyle" TargetType="{x:Type CheckBox}">
            <Style.Setters>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type CheckBox}">
                            <Border Name="border" Background="Transparent" CornerRadius="3">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1.5*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Image Name="img" Source="../../../ICon/Check_White.png" Width="20" Height="20" Grid.Row="0"/>
                                    <ContentPresenter Name="presenter" Content="DISABLED" HorizontalAlignment="Center"
                                      VerticalAlignment="Center" TextBlock.FontSize="{TemplateBinding FontSize}" Grid.Row="1"
                                      TextBlock.Foreground="{TemplateBinding Foreground}"/>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Effect" TargetName="border">
                                        <Setter.Value>
                                            <DropShadowEffect ShadowDepth="3" BlurRadius="5" Color="Gray" Opacity="0.5"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter Property="Source" Value="../../../ICon/Check_White.png" TargetName="img"/>
                                    <Setter Property="Content" Value="ENABLED" TargetName="presenter"/>
                                </Trigger>
                                <Trigger Property="IsChecked" Value="False">
                                    <Setter Property="Source" Value="../../../ICon/UnCheck_White.png" TargetName="img"/>
                                    <Setter Property="Content" Value="DISABLED" TargetName="presenter"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style.Setters>
        </Style>
    </UserControl.Resources>
    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
            <!--<ColumnDefinition Width="5"/>
            <ColumnDefinition Width="320"/>-->
        </Grid.ColumnDefinitions>

        <!-- 채널 표시 및 기능 바 -->
        <Grid Grid.Row="0" Grid.ColumnSpan="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ItemsControl Name="itemControl" Grid.ColumnSpan="5" ItemsSource="{Binding Path=AxisInfoList}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="5"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="LightGray" BorderThickness="2" Grid.Column="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="50"/>
                                    </Grid.ColumnDefinitions>


                                    <Grid Grid.Column="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="20"/>
                                        </Grid.ColumnDefinitions>
                                        <Border BorderBrush="LightGray" BorderThickness="0 0 0 0">
                                            <TextBlock Text="{Binding Path=ChannelName}" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                        FontSize="20"/>
                                        </Border>
                                        <Rectangle Stroke="{Binding Path=CurrentAxisColor}" Fill="{Binding Path=CurrentAxisColor}" StrokeThickness="2" Width="15" Height="15" Grid.Column="1"/>
                                    </Grid>

                                    <Button Grid.Column="1" Tag="{Binding Path=Channel}" BorderThickness="0" Background="#E9EEFF" Click="ChangeAxisColorButton_OnClick">
                                        <Button.Content>
                                            <Path Name="arrow1" Fill="Black" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                Stroke="Black" StrokeThickness="1" Data="M0,0 L0,2 L4,6 L8,2 L8,0 L4,4 z"/>
                                        </Button.Content>
                                    </Button>
                                </Grid>

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border BorderBrush="LightGray" BorderThickness="0 1 1 0" Grid.Column="0">
                                        <CheckBox Style="{StaticResource InspectListCheckBoxStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10"
                                            IsChecked="{Binding Path=IsChannelSelected, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding Path=IsChannelEnabled}"/>
                                    </Border>

                                    <Border BorderBrush="LightGray" BorderThickness="0 1 1 0" Grid.Column="1">
                                        <ComboBox Name="combo"  Background="Transparent" ItemsSource="{Binding Path=AxisNameList}" SelectedIndex="{Binding Path=CurrentSelectedAxisIndex}"
                                            BorderBrush="Black" BorderThickness="1" Foreground="Black" VerticalContentAlignment="Center"
                                            Margin="5" IsEnabled="{Binding Path=IsEnabledChannelComboBox}" Tag="{Binding Path=ChannelName}" SelectionChanged="ComboBox_SelectionChanged"/>

                                    </Border>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- 트리거 모드 -->
            <Border Name="triggerBorder" BorderBrush="LightGray" BorderThickness="0 1 1 1" Grid.Column="5">
