<UserControl x:Class="DCT_Graph.TriggerLineControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CrevisLibrary"
             Height="auto" Width="auto">
    <UserControl.Resources>
        <Style x:Key="test" TargetType="{x:Type Grid}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Cursor" Value="ScrollNS"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <local:DraggableCanvas Margin="{Binding Path=CanvasMargin}">
        <Grid Name="mainGrid" Style="{StaticResource test}" Height="10" Background="#E9EEFF">
            <Line Name="line" X1="0" Y1="5" X2="{Binding Path=AxisLength}" Y2="5" Stroke="Black" StrokeThickness="3" Visibility="{Binding Path=LineVisible}" StrokeDashArray="{Binding Path=DashArray}"/>
        </Grid>
    </local:DraggableCanvas>
</UserControl>
