        </Grid>-->
        <!--<ComboBox Name="SamplingCombo" Style="{StaticResource CustomComboBoxStyle}" Grid.Row="1" Grid.Column="1" BorderBrush="LightGray" 
          Foreground="Black" BorderThickness="2" Margin="10"/>-->

        <!-- 트리거 동작 -->
        <Border BorderBrush="LightGray" BorderThickness="2" Grid.Row="2" Grid.Column="0" Margin="8" CornerRadius="3">
            <TextBlock Text=" Trigger &#10;  Action" FontSize="15"/>
        </Border>
        <ToggleButton Name="TriggerActionButton" Style="{StaticResource CustomToggleButtonStyle}" BorderThickness="2" IsChecked="{Binding Path=IsTriggerActionChanged, UpdateSourceTrigger=Explicit}"
                Content="{Binding Path=TriggerActionText}" Grid.Row="2" Grid.Column="1" Margin="8" Foreground="Black" Checked="TriggerActionButton_Checked" Unchecked="TriggerActionButton_Unchecked"/>

        <!-- 샘플링 시간 -->
        <Border BorderBrush="LightGray" BorderThickness="2" Grid.Row="3" Grid.Column="0" Margin="8" CornerRadius="3">
            <TextBlock Text=" Sampling &#10;    Time" FontSize="15"/>
        </Border>
        <ComboBox Name="SamplingTimeCombo" Style="{StaticResource CustomComboBoxStyle}" Grid.Row="3" Grid.Column="1" BorderBrush="LightGray" 
          Foreground="Black" BorderThickness="2" Margin="10" ItemsSource="{Binding Path=TriggerSamplingTimeList}"
          SelectedIndex="{Binding Path=TriggerTimeIndex, UpdateSourceTrigger=Explicit}"/>
