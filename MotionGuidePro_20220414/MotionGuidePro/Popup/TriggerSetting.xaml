<Window x:Class="CrevisLibrary.TriggerSetting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Trigger Setting" Height="380" Width="400">
    <Window.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Style.Setters>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style.Setters>
        </Style>

        <Style x:Key="RadioStyle" TargetType="{x:Type RadioButton}">
            <Style.Setters>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type RadioButton}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="{TemplateBinding HorizontalAlignment}">
                                <!-- 버튼 -->
                                <Border BorderBrush="LightGray" CornerRadius="3" BorderThickness="2" Margin="5" Width="20" Height="20">
                                    <Rectangle Name="Rect" Fill="{x:Null}" Stroke="{x:Null}" StrokeThickness="1" Margin="3"/>
                                </Border>
                                <ContentPresenter Name="presenter" Content="{TemplateBinding Content}" HorizontalAlignment="Center"
                                    VerticalAlignment="Center" TextBlock.FontSize="{TemplateBinding FontSize}"
                                    TextBlock.FontWeight="Normal"/>
                            </StackPanel>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="true">
                                    <Setter Property="Fill" Value="DimGray" TargetName="Rect"/>
                                    <Setter Property="Stroke" Value="DimGray" TargetName="Rect"/>
                                    <Setter Property="StrokeThickness" Value="2" TargetName="Rect"/>
                                    <Setter Property="TextBlock.FontWeight" Value="Bold" TargetName="presenter"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style.Setters>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Ch 선택 -->
        <Border BorderBrush="LightGray" BorderThickness="2" Grid.Row="0" Grid.Column="0" Margin="8" CornerRadius="3">
            <TextBlock Text=" Trigger &#10; Channel " FontSize="15"/>
        </Border>
        <ComboBox Name="TriggerCombo" Style="{StaticResource CustomComboBoxStyle}" Grid.Row="0" Grid.Column="1" BorderBrush="LightGray" 
          Foreground="Black" BorderThickness="2" Margin="10" ItemsSource="{Binding Path=CurrentSelectedAxisChannelList}"
          SelectedIndex="{Binding Path=SelectChannel, UpdateSourceTrigger=Explicit}" SelectionChanged="TriggerCombo_SelectionChanged"/>

        <!-- 샘플링 주기 -->
        <Border BorderBrush="LightGray" BorderThickness="2" Grid.Row="1" Grid.Column="0" Margin="8" CornerRadius="3">
            <TextBlock Text=" Sampling &#10;  Period" FontSize="15"/>
        </Border>
        <ComboBox Name="SamplingPeriodCombo" Style="{StaticResource CustomComboBoxStyle}" Grid.Row="1" Grid.Column="1" BorderBrush="LightGray" 
          Foreground="Black" BorderThickness="2" Margin="10" ItemsSource="{Binding Path=TriggerSamplingPeriodList}"
          SelectedIndex="{Binding Path=TriggerPeriodIndex, UpdateSourceTrigger=Explicit}"/>
        <!--<Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
