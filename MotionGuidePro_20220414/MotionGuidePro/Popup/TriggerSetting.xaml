                         Grid.Column="2" Checked="SamplePeriodButton_OnChecked" Tag="2" />
            <RadioButton Style="{StaticResource RadioStyle}" GroupName="Period" Content="2ms" HorizontalAlignment="Center" 
                         Grid.Column="3" Checked="SamplePeriodButton_OnChecked" Tag="3"/>
            <RadioButton Style="{StaticResource RadioStyle}" GroupName="Period" Content="5ms" HorizontalAlignment="Center" 
