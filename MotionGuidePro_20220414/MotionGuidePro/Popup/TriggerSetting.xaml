        <!-- 트리거 레벨 -->
        <Border BorderBrush="LightGray" BorderThickness="2" Grid.Row="4" Grid.Column="0" Margin="8" CornerRadius="3">
            <TextBlock Text=" Trigger &#10;  Level" FontSize="15"/>
        </Border>
        <Border BorderBrush="LightGray" BorderThickness="2" Grid.Row="4" Grid.Column="1" Margin="8" CornerRadius="3">
            <TextBox Name="TriggerLevelBox" BorderThickness="0" VerticalAlignment="Center" FontSize="20" 
                     Text="{Binding Path=TriggerLevel, UpdateSourceTrigger=Explicit}" KeyDown="TriggerLevelBox_OnKeyDown"/>
        </Border>

        <Grid Grid.Row="5" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Style="{StaticResource CustomButtonStyle}" Content="OK" Grid.Column="0" FontSize="20" Click="OKButton_OnClick"/>
            <Button Style="{StaticResource CustomButtonStyle}" Content="Cancel" Grid.Column="1" FontSize="20" Click="CancelButton_OnClick"/>
        </Grid>
    </Grid>
</Window>
