                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <RadioButton Style="{StaticResource RadioStyle}" GroupName="Period" Content="0.1ms" HorizontalAlignment="Center"
                         Grid.Column="0" Checked="SamplePeriodButton_OnChecked" Tag="0"/>
